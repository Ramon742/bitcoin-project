<% layout('layouts/boilerplate') -%>

    <form class="text-center border border-light p-5" style="width: 400px; margin: 100px auto; background-color: grey;" action="/users/login" method="POST">

        <h1 class="mb-5" style="color: #17a2b8;">Login</h1>
    
    
        <!-- Name -->
        <input type="text" name="username" id="defaultSubscriptionFormPassword" class="form-control mb-4" placeholder="username">
    
        <!-- Email -->
        <input type="password" name="password"  id="defaultSubscriptionFormEmail" class="form-control mb-4" placeholder="password">
    
        <!-- Sign in button -->

        <button class="btn btn-info btn-block mt-3" type="submit">Sign In</button>
    
    </form>
