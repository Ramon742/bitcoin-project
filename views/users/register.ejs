<% layout('layouts/boilerplate') -%>

    <form class="text-center border border-light p-5" style="width: 400px; margin: 50px auto; background-color: grey;" action="/users/register" method="POST">

        <h1 class="mb-5" style="color: #17a2b8;">Register</h1>
    
        <!-- Name -->
        <input type="text" name="username" id="" class="form-control mb-4" placeholder="username" required>
    
        <!-- Email -->
        <input type="password" name="password" id="" class="form-control mb-4" placeholder="password" required>


        <input type="email" name="email" id="" class="form-control mb-4" placeholder="email" required> 
        
        <!-- Sign in button -->
        <button class="btn btn-info btn-block mt-3" type="submit">Send</button>
    
    
    </form>
